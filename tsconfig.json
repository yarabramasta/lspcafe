{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["esnext"],
    "alwaysStrict": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@/controllers/*": ["api/controllers/*"],
      "@/routes/*": ["api/routes/*"],
      "@/middlewares/*": ["api/middlewares/*"],
      "@/entities/*": ["entities/*"],
      "@/helpers/*": ["lib/helpers/*"],
      "@/services/*": ["lib/services/*"],
      "@/utils/*": ["lib/utils/*"],
      "@/loaders/*": ["loaders/*"],
      "@/models/*": ["models/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "**/*.spec.ts"
  ]
}